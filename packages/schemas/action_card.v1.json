{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://skripts.local/schemas/action_card.v1.json",
  "title": "ActionCardV1",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "card_id",
    "title",
    "kind",
    "status",
    "priority",
    "created_at"
  ],
  "properties": {
    "card_id": {
      "type": "string",
      "minLength": 1
    },
    "title": {
      "type": "string",
      "minLength": 1
    },
    "kind": {
      "type": "string",
      "enum": ["task", "decision", "note", "risk"]
    },
    "status": {
      "type": "string",
      "enum": ["todo", "in_progress", "blocked", "done"]
    },
    "priority": {
      "type": "integer",
      "minimum": 0,
      "maximum": 5
    },
    "created_at": {
      "type": "string",
      "format": "date-time"
    },
    "owner": {
      "type": "string"
    },
    "metadata": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "source": {"type": "string"},
        "confidence": {"type": "number", "minimum": 0, "maximum": 1}
      }
    }
  }
}
