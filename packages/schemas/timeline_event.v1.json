{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "timeline_event.v1",
  "title": "TimelineEventV1",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_version",
    "id",
    "timestamp",
    "actor",
    "type",
    "message"
  ],
  "properties": {
    "schema_version": {
      "type": "string",
      "const": "timeline_event.v1"
    },
    "id": {
      "type": "string",
      "minLength": 1
    },
    "timestamp": {
      "type": "string",
      "format": "date-time"
    },
    "actor": {
      "type": "string",
      "minLength": 1
    },
    "type": {
      "type": "string",
      "enum": ["note", "status_change", "assignment", "system"]
    },
    "message": {
      "type": "string",
      "minLength": 1
    },
    "metadata": {
      "type": "object",
      "additionalProperties": {
        "type": ["string", "number", "integer", "boolean", "null"]
      }
    }
  }
}
