{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "timeline_event.v1.json",
  "title": "Timeline Event v1",
  "type": "object",
  "additionalProperties": false,
  "required": ["schema_version", "event_id", "timestamp", "type", "message"],
  "properties": {
    "schema_version": {
      "const": "timeline_event.v1"
    },
    "event_id": {
      "type": "string",
      "minLength": 1
    },
    "timestamp": {
      "type": "string",
      "format": "date-time"
    },
    "type": {
      "type": "string",
      "enum": ["note", "status_change", "decision", "handoff"]
    },
    "message": {
      "type": "string",
      "minLength": 1
    },
    "actor": {
      "type": "string"
    }
  }
}
